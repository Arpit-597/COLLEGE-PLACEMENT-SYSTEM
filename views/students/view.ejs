<%- include('../layouts/navbar.ejs') %>
    <!-- This is used to include another ejs file content in another file -->

    <%- include('../layouts/sidebar.ejs') %>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0 text-dark">Student Page</h1>
                        </div><!-- /.col -->
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item active">Student</li>
                            </ol>
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->

            <!-- Main content -->
            <div class="content">
                <div class="container-fluid">
                    <div class="card">
                        <div class="card-header">
                            Student Details
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <h2>NAME: <%= view.name %>
                            </h2>
                            <p>
                                <strong>RollNo: </strong>
                                <%= view.rollNumber %>
                            </p>
                            <p>
                                <strong>Address: </strong>
                                <%= view.address %>
                            </p>
                            <p>
                                <strong>Gender: </strong>
                                <%= view.gender %>
                            </p>
                            <p>
                                <strong>Email: </strong>
                                <%= view.email %>
                            </p>
                            <% const dob=new Date(view.dob); 
                               const options={ year: 'numeric' , month: 'short' , day: '2-digit' }; 
                               const formattedDOB = dob.toLocaleDateString('en-GB', options); %>
                                <p>
                                    <strong>DOB:</strong>
                                    <%= formattedDOB %>
                                </p>
                                <p>
                                    <strong>Phone: </strong>
                                    <%= view.phone %>
                                </p>
                                <p>
                                    <strong>Branch: </strong>
                                    <%= view.branch %>
                                </p>
                                <p>
                                    <strong>Semester: </strong>
                                    <%= view.semester %>
                                </p>
                                <p>
                                    <strong>Image: </strong>
                                    <br>
                                    <img src="<%= view.image.url %>" alt="" width="200">
                                </p>
                                <p>
                                    <strong>X Year: </strong>
                                    <%= view.Xyear %>
                                </p>
                                <p>
                                    <strong>X Marks: </strong>
                                    <%= view.Xmarks %>
                                </p>
                                <p>
                                    <strong>XII Year: </strong>
                                    <%= view.XIIyear %>
                                </p>
                                <p>
                                    <strong>XII Marks: </strong>
                                    <%= view.XIImarks %>
                                </p>
                                <p>
                                    <strong>College: </strong>
                                    <span style="text-transform: uppercase;">
                                        <%= view.college %>
                                    </span>
                                </p>
                                <!-- <iframe src="<%= view.resume %>" width="100%" height="500px" style="border: none;"></iframe> -->
                                <p>
                                    <strong>Resume:</strong>
                                    <a href="<%= view.resume %>" target="_blank" rel="noopener noreferrer"
                                        style="text-decoration: none;" class="btn btn-primary">
                                        VIEW RESUME
                                    </a>
                                </p>
                                <p>
                                    <strong>Placed Company: </strong>
                                    <span style="text-transform: uppercase;">
                                        <%= view.placedCompany %>
                                    </span>
                                </p>
                        </div>
                        <div class="card-footer">
                            <a href="/studentEdit/<%= view._id %>" class="btn btn-success">Edit</a>
                            <a href="/studentDelete/<%= view._id %>" class="btn btn-danger">Delete</a>
                            <a href="/student/display" class="btn btn-dark">Back To List</a>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

        <%- include('../layouts/footer.ejs') %>